#Set firewall name <box name>_IN rule <rule #> action accept
#Set firewall name <box name>_IN rule <rule #> protocol <tcp, udp, tcp_udp>
#Set firewall name <box name>_IN default-action drop
#Set interfaces ethernet <outer interface> firewall in name <box name>_IN


#Set firewall name router_IN rule 1 destination port [22, 80, 445]
#Set firewall name router_IN rule 1 destination address 192.10.1.1
#Set firewall name router_IN rule 1 action accept
#Set firewall name router_IN rule 1 protocol tcp_udp
